menu "ush"
	choice
		prompt "linebreak"
		default USH_LINEBREAK_LF

	config USH_LINEBREAK_LF
		bool "LF"

	config USH_LINEBREAK_CRLF
		bool "CRLF"
	endchoice
	
	config USH_TERMINAL_READER_RINGMASK_BITS
		int "terminal reader circular buffer mask bits(aka size!)"
		default 8 

	config USH_TERMINAL_HISTORY_RINGMASK_BITS
		int "terminal history circular buffer mask bits(aka size!)"
		default 5 

	config USH_TERMINAL_LINESIZE
		int "terminal command line size."
		default 256

	config USH_PROMPT
		string "shell prompt"
		default "esp32"

endmenu


